<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5CCCC6"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sweet.SetGroupActivity" >

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리"
        android:textColor="#FFFFFF" />

    <CheckBox
        android:id="@+id/CheckedTextView_accommodation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/category"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:clickable="true"
        android:gravity="center"
        android:hint="숙박"
        android:textColor="#FFFFFF" />

    <CheckBox
        android:id="@+id/CheckedTextView_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/category"
        android:layout_toEndOf="@id/CheckedTextView_accommodation"
        android:layout_toRightOf="@id/CheckedTextView_accommodation"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:clickable="true"
        android:gravity="center"
        android:hint="식사"
        android:textColor="#FFFFFF" />

    <CheckBox
        android:id="@+id/CheckedTextView_leisure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/category"
        android:layout_toEndOf="@id/CheckedTextView_meal"
        android:layout_toRightOf="@id/CheckedTextView_meal"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:clickable="true"
        android:gravity="center"
        android:hint="레저"
        android:textColor="#FFFFFF" />

    <CheckBox
        android:id="@+id/CheckedTextView_accompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/category"
        android:layout_toRightOf="@id/CheckedTextView_leisure"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:clickable="true"
        android:gravity="center"
        android:hint="동행"
        android:textColor="#FFFFFF" />

    <View
        android:id="@+id/View_forLine1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/CheckedTextView_leisure"
        android:background="#5CCCC6" />

    <EditText
        android:id="@+id/EditText_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/View_forLine1"
        android:background="#FFFFFF"
        android:hint="제목"
        android:padding="10dp" />

    <TextView
        android:id="@+id/View_forLine2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/EditText_title"
        android:background="#5CCCC6" />

    <EditText
        android:id="@+id/EditText_description"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/View_forLine2"
        android:background="#FFFFFF"
        android:hint="상세설명"
        android:padding="10dp" />

    <View
        android:id="@+id/View_forLine3"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/EditText_description"
        android:background="#5CCCC6" />

    <TextView
        android:id="@+id/TextView_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/View_forLine3"
        android:text="지역"
        android:textColor="#FFFFFF" />

    <Spinner
        android:id="@+id/Spinner_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/View_forLine3"
        android:layout_toRightOf="@id/TextView_region"
        android:drawSelectorOnTop="true"
        android:prompt="@string/region_prompt" />

    <View
        android:id="@+id/View_forLine4"
        android:layout_width="match_parent"
        android:layout_height="3dip"
        android:layout_below="@id/Spinner_region"
        android:background="#FFFFFF" />

    <View
        android:id="@+id/View_forLine5"
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:layout_below="@id/View_forLine4"
        android:background="#5CCCC6" />

    <TextView
        android:id="@+id/TextView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/View_forLine5"
        android:text="날짜"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/EditText_selectedDate"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/CheckedTextView_accompany"
        android:layout_alignTop="@id/TextView_date"
        android:layout_below="@id/View_forLine4"
        android:layout_toRightOf="@+id/CheckedTextView_accommodation"
        android:background="#FFFFFF"
        android:hint="날짜를 고르세요."
        android:textColor="#5CCCC6" />

    <RelativeLayout
        android:id="@+id/secondRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/EditText_selectedDate"
        android:background="#5CCCC6"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/TextView_fixedNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:text="정원"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/EditText_fixedNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/TextView_fixedNumber"
            android:hint="숫자로 입력하세요." />

    </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/secondRelativeLayout"
            android:background="#0B6F9B"
            android:gravity="center"
            android:onClick="onClickedSetGroup"
            android:text="모임 만들기"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextView_letterNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/EditText_description"
            android:layout_alignRight="@+id/EditText_description"
            android:text="TextView" />

</RelativeLayout>